{
  "name": "resistance",
  "version": "0.0.1",
  "description": "Mobile app for playing \"The Resistance\" board game",
  "main": "build/server.js",
  "repository": "github.com/johnforster/resistance",
  "author": "John Forster",
  "license": "MIT",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "start": "NODE_ENV=production node build/server.js",
    "build": "yarn build:client && yarn build:server",
    "build:client": "NODE_ENV=production yarn webpack --config webpack.config.js",
    "build:server": "NODE_ENV=production babel src/server -d build --extensions .ts",
    "start:dev": "PORT=9001 NODE_ENV=development concurrently 'yarn start:dev:client' 'yarn start:dev:server'",
    "start:dev:server": "ts-node-dev --project ./src/server/tsconfig.json -r tsconfig-paths/register ./src/server/server.ts --respawn --transpileOnly",
    "start:dev:client": "webpack-dev-server --hot",
    "typecheck": "yarn typecheck:server; yarn typecheck:client",
    "typecheck:server": "tsc -p src/server --noEmit",
    "typecheck:client": "tsc -p src/client --noEmit",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.2",
    "@types/express-ws": "^3.0.0",
    "@types/lodash.shuffle": "^4.2.6",
    "@types/node": "^12.12.7",
    "@types/react-dom": "^16.9.4",
    "@types/styled-components": "^5.1.7",
    "@types/uuid": "^3.4.6",
    "@types/websocket": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-const-enum": "^0.0.4",
    "babel-plugin-jsx-control-statements": "^4.0.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^4.0.0",
    "concurrently": "^5.0.0",
    "copy-webpack-plugin": "^5.0.5",
    "dotenv": "^8.2.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-jsx-control-statements": "^2.2.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "html-webpack-plugin": "^3.2.0",
    "ip": "^1.1.5",
    "jsx-control-statements": "^3.2.8",
    "prettier": "^2.1.1",
    "pwa-asset-generator": "^3.1.3",
    "source-map-loader": "^1.0.0",
    "terser": "^4.4.0",
    "ts-node-dev": "^1.0.0-pre.42",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "dependencies": {
    "babel-plugin-styled-components": "^1.10.6",
    "chalk": "^3.0.0",
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "express-static-gzip": "^2.0.6",
    "express-ws": "^4.0.0",
    "lodash.shuffle": "^4.2.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "socket.io": "^3.1.2",
    "styled-components": "^5.2.1",
    "uuid": "^3.3.3",
    "websocket": "^1.0.30",
    "ws": "^7.2.0"
  }
}
